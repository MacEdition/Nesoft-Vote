/* pages/rank/rank.wxss */
page {
  height: 100%;
  background: rgba(243,243,243,.3);
}
.container {
  width: 100%;
  position: relative;
  background: rgba(243,243,243,.3);
  padding-top: 30rpx;
}
.wrap {
  width: 95%;
  margin: 30rpx auto;
  border-radius: 20rpx;
  box-shadow: 0px 6px 10px /*#706f6f*/ rgba(0, 0, 0, 0.2);
  background: white;
}
.title {
  width: 100%;
  height: 200rpx;
  color:white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  display: flex;
  align-items: center;
  font-size: 60rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  
}
.title image:nth-child(1) {
  width: 30rpx;
  height: 30rpx;
  animation: up .8s linear infinite;
}
.title image:nth-child(2) {
  width: 37rpx;
  height: 37rpx;
  animation: up 1s linear infinite;
}
.title image:nth-child(3) {
  width: 26rpx;
  height: 26rpx;
  animation: up .6s linear infinite;
}

@keyframes up {
  0%{
    transform: translateY(60rpx);
    opacity: 0;
  }
  50%{
    
    opacity: 1;
  }
  100%{
    transform: translateY(-60rpx);
    opacity: 0;
  }
}
.header {
  width: 95%;
  height: 120rpx;
  font-size: 30rpx;
  color: white;
  margin: auto;
  
}
.header .end {
  text-align: center;
  font-size: 35rpx;
  color:black;
  
}

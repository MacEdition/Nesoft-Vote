/* pages/home/home.wxss */
page {
  width: 100%; 
  height: 100%;
  background: rgb(243,242,247)
}
.container {
  width: 90%;
  height: 100%;
  background: rgb(243,242,247);
  margin: auto;
  display: flex;
  align-items: center;
}
.nav {
  height: 90%;
  display: flex;
  justify-content: space-between;
  align-items: space-around;
  flex-wrap: wrap;
}
.nav-content {
  width: 325rpx;
  height:400rpx;
  background: rgb(255,255,255);
  box-shadow: 0 5rpx 25rpx rgba(0,0,0,.2);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.nav-content view {
  width: 100%;
  text-align: center;
}
.nav-content image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 40rpx;
}
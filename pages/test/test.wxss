/* pages/test/test.wxss */

.productHeader {
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-around;
  width: 100%;
  height: 70rpx;
  background-color: rgb(235, 243, 245);
  color: #bdbdbd;
  font-size: 33rpx;
}

.productHeader .left {
  height: 100%;
  width: 49.5%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-left: 5rpx;
}

.productHeader .red {
  height: 100%;
  width: 1%;
  background-color: black;
  margin-left: 5rpx;
}

.productHeader .right {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 49.5%;
  margin-right: 5rpx;
}

.sort {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: rgb(235, 243, 245);

}

.sort view {
  height: 50rpx;
  width: 20%;
  border: 1rpx solid gray;
  margin:0 10rpx;
}

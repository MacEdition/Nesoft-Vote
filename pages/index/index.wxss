.pick {
  background-color: rgb(255,255,255);
  height: 60rpx;
  width: 90%;
  display: flex;
  margin:30rpx auto 20rpx auto;
  justify-content: space-around;
  align-items: center;
  position: relative;
  left: 0;
  right: 0;
  border-radius: 30rpx;
  
  /* border-top: 1rpx solid #7CFC00;
  border-bottom:1rpx solid #7CFC00; */
  font-size: 30rpx;
  line-height: 40rpx;
  color: rgba(0, 0, 0, 0.747);
  /*font-family: STxinwei;*/
  font-family: "微软雅黑";
  box-shadow: 0px 4px 8px /*#706f6f*/ rgba(0, 0, 0, 0.2);
}
.picker-item {
  
  margin:auto 30rpx;
  display: inline-block;
  text-align: center;
  vertical-align: middle;
}
.picker-item image {
  width: 45rpx;
  height: 45rpx;
  vertical-align: middle;
}
.icon {
  width: 50rpx;
  height: 50rpx;
}
.icon:hover {
  animation: move .5s;
}
.iconfont:hover{
  animation: move .5s;
}
@keyframes move {
  0%{
    transform: scale(1) rotate(0deg);
  }
  50%{
    transform: scale(1.3) rotate(-45deg);
  }
  100%{
    transform: scale(1) rotate(0deg);
  }
}
@keyframes show {
  0%{
    transform: translateY(500rpx);
  }
  100%{
    transform: translateY(0rpx);
  }
}
@keyframes clickShow {
  0%{
    transform: scale(1);
  }
  30%{
    transform: scale(1.1);
  }
  70%{
    transform: scale(0.9);
  }
  90% {
    transform: scale(1.03);
  }
  100%{
    transform: scale(1);
  }
}

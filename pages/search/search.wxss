@import "../../css/iconfont.wxss";
.container {
  width: 100%;
  background-color: rgb(235, 243, 245);
}

.search {
  height: 120rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.search-input {
  background-color: rgb(255, 255, 255);
  border-radius: 30rpx;
  box-shadow: 0px 0px 1px #706f6f;
  margin-top: 30rpx;
  height: 50%;
  width: 90%;
  display: flex;
  justify-content: center;
  align-items: center;
}

input{
  width: 80%;
  font-size: 30rpx;
}

.icon-search {
  font-size: 50rpx;
}
.show {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.show-item {
  height: 296rpx;
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 20rpx 15rpx;
  background-color: rgb(255, 255, 255);
  border-radius: 20rpx;
  box-shadow: 0px 6px 10px /*#706f6f*/ rgba(0, 0, 0, 0.2);
  animation: show .5s ease-in-out;
}
@keyframes show {
  0%{
    transform: translateX(-500rpx);
  }
  100%{
    transform: translateX(0rpx);
  }
}
.show-item .show-pic {
  height: 296rpx;
  width: 250rpx;
}

.show-item .show-pic image {
  height: 296rpx;
  width: 250rpx;
  border-radius: 20rpx 0rpx 0rpx 20rpx;
}

.show-content {
  height: 300rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  margin-left: 20rpx;
}

.show-content .up-name text {
  font-size: 28rpx;
  /* color: rgb(255,204,0);   */
  color: #ffa500;
}

.show-content .up-showname text {
  font-size: 33rpx;
  color: #2e2e2e;
  /* color: #FFA500; */
  font-weight: bold;
}

.show-content .up-showdes text {
  font-size: 25rpx;
  color: #878787;
}

.show-content .up {
  height: 70%;
  width: 95%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.show-content .down {
  height: 20%;
  width: 95%;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-end;
  margin-bottom: 10rpx;
}

.show-content .down .left {
  margin: 0 10rpx;
}

.show-content .down .left text {
  font-size: 10pt;
  color: #ffa500;
  /* color:rgb(255,204,0); */
}
.icon {
  width: 50rpx;
  height: 50rpx;
}
.icon:hover {
  animation: move .5s;
}
.icon-favorite {
  font-size: 30rpx;
  color: red;
}

.bottom {
  height: 60rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: rgb(235, 243, 245);
  border-top: 1rpx solid rgb(193, 193, 193);
}

.bottom text {
  font-size: 25rpx;
  color: #bdbdbd;
}
.iconfont:hover{
  animation: move .5s;
}
@keyframes move {
  0%{
    transform: scale(1) rotate(0deg);
  }
  50%{
    transform: scale(1.3) rotate(-45deg);
  }
  100%{
    transform: scale(1) rotate(0deg);
  }
}